<div class="container mt-5">
  <h1 class="mb-4">Projects</h1>
  
  <!-- Project cards loop -->
  <div class="row">
    <% @projects.each do |project| %>
      <div class="col-lg-4 col-md-6">
        <div class="card project-card">
          <div class="card-body">
            <h5 class="card-title"><%= project.name %></h5>
            <p class="card-text"><%= project.description %></p>
            <%= link_to 'View Details',  project_path(project.id), class: 'btn btn-success' %>
            <%= button_to "Delete", project_path(project), method: :delete, data: { confirm: "Are you sure you want to delete this project?" }, class: "btn btn-danger", remote: true %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>